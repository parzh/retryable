{
  "name": "@parzh/retryable",
  "version": "1.3.1",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "github:parzh/retryable",
  "keywords": [
    "retryable",
    "retryer",
    "repeat",
    "repeatable",
    "retry",
    "retry count",
    "retryCount"
  ],
  "author": "Dima Parzhitsky <parzhitsky@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/parzh/retryable#readme",
  "bugs": {
    "url": "https://github.com/parzh/retryable/issues"
  },
  "scripts": {
    "test": "jest",
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean",
    "build": "ncc build src/index.ts --out dist --minify",
    "prepublishOnly": "npm ci && npm run build && npm test",
    "postpublish": "git push --follow-tags"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": ".",
    "roots": [
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/*.spec.[jt]s"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "restoreMocks": true,
    "errorOnDeprecated": true,
    "cacheDirectory": "<rootDir>/.cache/jest"
  },
  "devDependencies": {
    "@types/jest": "25.1.0",
    "@types/node": "13.5.0",
    "@zeit/ncc": "0.21.0",
    "jest": "25.1.0",
    "rimraf": "3.0.1",
    "ts-jest": "25.0.0",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "@valuer/main": "1.1.2"
  }
}
